# FilersKeepers Environment Configuration
# Copy this file to .env and update the values as needed

# ==============================================
# Security Settings
# ==============================================
# Secret key for application security (generate a strong random key for production)
FILERSKEEPERS_SECRET_KEY=TrulyRandomSecretKey

# ==============================================
# Application Settings
# ==============================================
# Enable debug mode (set to false in production)
FILERSKEEPERS_DEBUG=false

# Environment: dev, stage, or prod
FILERSKEEPERS_ENVIRONMENT=dev

# ==============================================
# MongoDB Settings
# ==============================================
# MongoDB connection URL
# Format: mongodb://username:password@host:port/database?authSource=admin
FILERSKEEPERS_MONGODB_URL=mongodb://filerskeepers:filerskeepers@localhost:27017/filerskeepers?authSource=admin

# MongoDB database name
FILERSKEEPERS_MONGODB_DATABASE=filerskeepers

# ==============================================
# Redis Settings
# ==============================================
# Redis connection URL for general use (rate limiting, caching)
# Format: redis://host:port/db
FILERSKEEPERS_REDIS_URL=redis://localhost:6379

# ==============================================
# ARQ Settings (Background Task Queue)
# ==============================================
# ARQ Redis host
FILERSKEEPERS_ARQ_HOST=localhost

# ARQ Redis port
FILERSKEEPERS_ARQ_PORT=6379

# ARQ Redis database number (separate from general Redis to avoid conflicts)
FILERSKEEPERS_ARQ_DB=2

# ==============================================
# Rate Limiting
# ==============================================
# Maximum number of API requests per hour per API key
FILERSKEEPERS_RATE_LIMIT_PER_HOUR=100

# ==============================================
# Web Crawler Settings
# ==============================================
# HTTP request timeout in seconds
FILERSKEEPERS_CRAWLER_TIMEOUT=30

# Maximum number of retry attempts for failed requests
FILERSKEEPERS_CRAWLER_MAX_RETRIES=3

# Delay in seconds before retrying a failed request
FILERSKEEPERS_CRAWLER_RETRY_DELAY=1
